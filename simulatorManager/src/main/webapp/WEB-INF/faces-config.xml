<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="            http://java.sun.com/xml/ns/javaee           http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <display-name>Home</display-name>
  <navigation-case>
   <from-outcome>home</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>configuracion</from-outcome>
   <to-view-id>/configuracion.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>tramosCrud</from-outcome>
   <to-view-id>/tramoscrud.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <description>Si se atrapa una excepción que tenga que ver con datos caducados por la navegación, se envía la aplicación a esta página de error</description>
   <from-outcome>datosCaducados</from-outcome>
   <to-view-id>/datosCaducados.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <description>Navegación desde la vista de mantanimiento de tramos</description>
  <display-name>tramoscrud</display-name>
  <from-view-id>/tramoscrud.xhtml</from-view-id>
  <navigation-case>
   <description>Enviar la vista a la pantalla de modificación</description>
   <from-outcome>modificar</from-outcome>
   <to-view-id>/tramoscrudmodify.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>Modificación de Tramos</display-name>
  <from-view-id>/tramoscrudmodify.xhtml</from-view-id>
  <navigation-case>
   <description>Volver a mantenimiento de tramos</description>
   <from-outcome>volver</from-outcome>
   <to-view-id>/tramoscrud.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <factory>
  <exception-handler-factory>uca.rafasanmartinez.pfc.sm.util.SimulatorExceptionHandlerFactory</exception-handler-factory>
 </factory>
 <!-- This descriptor activates the JSF 2.0 Servlet 
 Write your navigation rules here. You are encouraged to use CDI 
        for creating @Named managed beans. -->
</faces-config>
